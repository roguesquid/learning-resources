{
    "name": "CEL Learning Resources Catalog",
    "dockerComposeFile": "docker-compose.yml",
    "service": "catalog",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "remoteUser": "vscode",
    "remoteEnv": {
        "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
    },
    "containerEnv": {
        "TZ": "America/Caracas",
        "NODE_ENV": "development"
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
            "moby": true,
            "installDockerBuildx": true,
            "version": "latest",
            "dockerDashComposeVersion": "v2"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "username": "wp_php"
        },
        "ghcr.io/mikaello/devcontainer-features/modern-shell-utils:1": {},
        "ghcr.io/devcontainers-contrib/features/node-asdf:0": {
            "version": "20.10.0"
        },
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers-contrib/features/pnpm:2": {}
    },
    "onCreateCommand": "sudo chmod a+x ./.devcontainer/scripts/install.sh && ./.devcontainer/scripts/install.sh",
    "forwardPorts": [5173],
    "portsAttributes": {
        "5173": {
            "label": "SvelteKit App",
            "onAutoForward": "silent"
        }
    },
    "customizations": {
        "vscode": {
            // Set *default* container specific settings.json values on container create.
            "settings": {
                "colorize.include": ["**/*.css", "**/*.scss", "**/*.postcss"],
                "debug.javascript.autoAttachFilter": "disabled",
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "editor.formatOnSave": true,
                "editor.formatOnSaveMode": "modifications",
                "editor.formatOnPaste": true,
                "editor.linkedEditing": true,
                "editor.quickSuggestions": {
                    "strings": true
                },
                "explorer.fileNesting.enabled": true,
                "explorer.fileNesting.patterns": {
                    ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap, .git-blame*, commitlint.config.cjs,.versionrc",
                    ".env*": "*.env, .env.*, .envrc, env.d.ts",
                    ".eslintrc*": ".eslintignore",
                    ".prettierrc*": ".prettierignore, import-sorter.json",
                    "readme*": "authors, backers*, changelog*, citation*, code_of_conduct*, codeowners, contributing*, contributors, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors*",
                    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, pnpm-workspace.yaml, pnpm-debug.log, .npmrc",
                    "tsconfig.json": "tsconfig.*.json",
                    "svelte.config.*": "playwright.config.*, postcss.config.*, puppeteer.config.*, svgo.config.*, tailwind.config.*, tsdoc.*, vitest.config.*, webpack.config.*, windi.config.*, sequence.mjs, vite.config.ts",
                    "*.ts": "${capture}.js, ${capture}.d.ts.map, ${capture}.*.ts, ${capture}_*.js, ${capture}_*.ts",
                    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
                    "*.jsx": "${capture}.js",
                    "*.tsx": "${capture}.ts",
                    "*.svelte": "${capture}.ts",
                    "+layout.svelte": "+layout.ts,+layout.ts,+layout.js,+layout.server.ts,+layout.server.js",
                    "+page.svelte": "+page.server.ts,+page.server.js,+page.ts,+page.js "
                },
                "files.associations": {
                    "*.env.development": "dotenv",
                    "*.env.production": "dotenv",
                    "*.mdx": "markdown"
                },
                "files.autoSave": "onFocusChange",
                "files.exclude": {
                    "**/node_modules": true,
                    "**/.pnpm-store": true,
                    "**/.docker": true,
                    "**/dist": true,
                    "**/build": true,
                    "**/.svelte-kit": true,
                    "**/.turbo": true,
                    "**/.history": true
                },
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/bin/zsh"
                    }
                },
                "todo-tree.filtering.excludeGlobs": [
                    "**/node_modules/*",
                    "**/dist/*",
                    "**/build/*",
                    "**/.svelte-kit/*",
                    "**/.vscode/*",
                    "**/.history"
                ],
                "todo-tree.general.debug": true,
                "todo-tree.general.statusBar": "total",
                "todo-tree.highlights.customHighlight": {
                    "TODO": {
                        "type": "text",
                        "iconColour": "#B4E938",
                        "background": "#B4E938",
                        "foreground": "#000000"
                    },
                    "FIXME": {
                        "type": "text",
                        "iconColour": "#E92440",
                        "background": "#E92440",
                        "foreground": "#FFFFFF"
                    }
                },
                "todo-tree.highlights.defaultHighlight": {
                    "type": "text-and-comment"
                },
                "todo-tree.tree.expanded": true,
                "[svelte]": {
                    "editor.formatOnSave": true,
                    "editor.defaultFormatter": "svelte.svelte-vscode",
                    "editor.quickSuggestions": {
                        "strings": true
                    },
                    "editor.inlineSuggest.enabled": true,
                    "tailwindCSS.validate": true,
                    "template-string-converter.enable": true,
                    "template-string-converter.validLanguages": ["javascript", "typescript", "svelte", "html"],
                    "template-string-converter.autoRemoveTemplateString": true
                }
            },
            // Add the IDs of extensions you want installed when the container is created.
            "extensions": [
                "aaron-bond.better-comments",
                "albert.TabOut",
                "austenc.tailwind-docs",
                "bierner.github-markdown-preview",
                "bradlc.vscode-tailwindcss",
                "codezombiech.gitignore",
                "csstools.postcss",
                "danielgjackson.auto-dark-mode-windows",
                "DavidAnson.vscode-markdownlint",
                "dbaeumer.vscode-eslint",
                "donjayamanne.githistory",
                "dozerg.tsimportsorter",
                "eamodio.gitlens",
                "EditorConfig.EditorConfig",
                "esbenp.prettier-vscode",
                "Gruntfuggly.todo-tree",
                "ionutvmi.path-autocomplete",
                "Jacano.vscode-pnpm",
                "kamikillerto.vscode-colorize",
                "meganrogge.template-string-converter",
                "mikestead.dotenv",
                "mhutchie.git-graph",
                "ms-azuretools.vscode-docker",
                "ms-vscode.js-debug",
                "ms-vscode.js-debug-companion",
                "ms-vscode.live-server",
                "mutantdino.resourcemonitor",
                "oderwat.indent-rainbow",
                "ryu1kn.annotator",
                "shyykoserhiy.git-autoconfig",
                "stkb.rewrap",
                "svelte.svelte-vscode",
                "tomoki1207.pdf",
                "vector-of-bool.gitflow",
                "vunguyentuan.vscode-postcss",
                "william-voyek.vscode-nginx",
                "xyz.local-history",
                "zerocrunch.commentator",
                "Zignd.html-css-class-completion"
            ]
        }
    }
}
